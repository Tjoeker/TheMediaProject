<script src="~/js/Series.js"></script>

@model TheMediaProject.Models.Serie.SeriesCreateViewModel

<form asp-controller="Series" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo"></label>
        <input class="form-control" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input class="form-control flexdatalist flexdatalist-multiple" data-min-length="0" multiple="multiple" list="genrelist" name="Genre" asp-for="Genre" />
        <datalist id="genrelist">
            @foreach (var name in Model.genreNames)
            {
                <option value="@name.Name">@name.Name</option>
            }

        </datalist>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Actors"></label>
        <input class="form-control flexdatalist flexdatalist-multiple" data-min-length="1" multiple="multiple" list="actorlist" name="Actors" asp-for="Actors" />
        <datalist id="actorlist">
            @foreach (var name in Model.artistNames)
            {
                <option value="@name.ArtistName">@name.ArtistName</option>
            }

        </datalist>
    </div>

    <div class="form-group">
        <label asp-for="Directors"></label>
        <input class="form-control flexdatalist flexdatalist-multiple" data-min-length="1" multiple="multiple" list="directorlist" name="Directors" asp-for="Directors" />
        <datalist id="directorlist">
            @foreach (var name in Model.artistNames)
            {
                <option value="@name.ArtistName">@name.ArtistName</option>
            }

        </datalist>
    </div>


    <div class="SeasonForm" style="display:none;">
        <h2>Episodes</h2>

        <h3>Episode 1</h3>
        <div class="form-group">
            <label asp-for="Episodes[0].Title"></label>
            <input class="form-control" asp-for="Episodes[0].Title" />
            <span class="text-danger" asp-validation-for="Episodes[0].Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Episodes[0].Description"></label>
            <input class="form-control" asp-for="Episodes[0].Description" />
            <span class="text-danger" asp-validation-for="Episodes[0].Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Episodes[0].PlayTimeHours"></label>
            <input class="form-control" asp-for="Episodes[0].PlayTimeHours" />
            <span class="text-danger" asp-validation-for="Episodes[0].PlayTimeHours"></span>
        </div>
        <div class="form-group">
            <label asp-for="Episodes[0].PlayTimeMinutes"></label>
            <input class="form-control" asp-for="Episodes[0].PlayTimeMinutes" />
            <span class="text-danger" asp-validation-for="Episodes[0].PlayTimeMinutes"></span>
        </div>
        <div class="form-group">
            <label asp-for="Episodes[0].ReleaseDate"></label>
            <input class="form-control" asp-for="Episodes[0].ReleaseDate" />
            <span class="text-danger" asp-validation-for="Episodes[0].ReleaseDate"></span>
        </div>

        <button id="AddEpisodeButton" class="btn btn-primary" type="button" onclick="AddEpisode()">Add Another Episode</button>
    </div>

    <button class="btn btn-primary" type="submit">Create Series</button>
    <button class="btn btn-primary SeasonFormHide" type="button" onclick="ShowCreateSeason()">Add First Season</button>
    <button id="SeasonFormButton" class="btn btn-primary" type="button" onclick="CancelCreateSeason()" style="display:none;">Cancel Create Season</button>
</form>
